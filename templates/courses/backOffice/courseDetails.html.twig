{% extends 'baseBack.html.twig' %}
{% block title %}EcoCraftLearning - {{ course.title }}{% endblock %}
{% block body %}
<div class="admin-courses-tab-content">
<div class="admin-courses-tab">
    <h3 class="title">Course Details !</h3>
    <div class="courses-tab-wrapper">
        <div class="tab-btn">
            <a href="{{path('tutor_course_dashboard')}}" class="btn btn-primary btn-hover-dark">Go Back</a>
        </div>
    </div>
</div>
<!-- Courses Start -->
    <div class="section section-padding mt-n10">
        <div class="container">
            <div class="row gx-10">
                <div class="col-lg-8">
                    <!-- Courses Details Start -->
                    <div class="courses-details">
                        <div class="courses-details-images">
                            <img src="{{ asset('contents/uploads/courses/' ~ course.image) }}" alt="Courses Details"width="330px;" height="200px;">
                            <div class="courses-play">
                                <img src="{{asset('assets/images/courses/circle-shape.png')}}" alt="Play">
                                <a class="play video-popup" href="#"><i class="flaticon-play"></i></a>
                            </div>
                        </div>

                        <h2 class="title">{{ course.title }}</h2>

                        <div class="courses-details-admin">
                            <div class="admin-author">
                                <div class="author-thumb">
                                    <img src="{{ asset('contents/uploads/users/' ~ app.user.image) }}" alt="Author">
                                </div>
                                <div class="author-content">
                                    <a class="name" href="#">{{course.tutor.getFirstname}} {{course.tutor.getLastname}}</a>
                                    <span class="Enroll">{{ course.nbrregistred }} Enrolled Students</span>
                                </div>
                            </div>
                            <div class="admin-rating">
                                <span class="rating-count">{{ course.rate }}</span>
                                <span class="rating-star">
                                        <span class="rating-bar" style="width: 0%;"></span>
                                </span>
                                <span class="rating-text">({{ course.nbrpersonrated }} Rating)</span>
                            </div>
                        </div>

                        <!-- Courses Details Tab Start -->
                        <div class="courses-details-tab">

                            <!-- Details Tab Menu Start -->
                            <div class="details-tab-menu">
                                <ul class="nav justify-content-center">
                                    <li><button class="active" data-bs-toggle="tab" data-bs-target="#description">Description</button></li>
                                    <li><button onclick="window.location.href='{{ path('white_board_tutor', {'idCourse' : course.idcourse}) }}'">WB Meeting</button></li>
                                    <li><button onclick="window.location.href='{{ path('add_section', {'idCourse' : course.idcourse})}}'">Add Section</button></li>
                                    {% if course.nbrsection > 0 %}
                                    <li><button onclick="window.location.href='{{ path('show_section', {'idCourse' : course.idcourse, 'sectionIndex' : 0})}}'">Show Sections</button></li>
                                    {% endif %} 
                                </ul>
                            </div>
                            <!-- Details Tab Menu End -->

                            <!-- Details Tab Content Start -->
                            <div class="details-tab-content">
                                <div class="tab-content">
                                    <div class="tab-pane fade show active" id="description">

                                        <!-- Tab Description Start -->
                                        <div class="tab-description">
                                            <div class="description-wrapper">
                                                <h3 class="tab-title">Description:</h3>
                                                <p>{{ course.description }}</p>
                                            </div>
                                        </div>
                                        <!-- Tab Description End -->

                                    </div>    
                                    <!-- Reviews Form Modal Start -->
                                    <div class="modal fade" id="reviewsModal">
                                        <div class="modal-dialog modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Please enter your password</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <!-- Reviews Form Start -->
                                                <div class="modal-body reviews-form">
                                                    <form action="{{ path('delete_course', {'idCourse' : course.idcourse})}}" method="post">
                                                        <div class="row">
                                                            <div class="col-md-6">
                                                                <!-- Single Form Start -->
                                                                <div class="single-form">
                                                                    <input type="password" name="password" placeholder="Password here">
                                                                </div>
                                                                <!-- Single Form End -->
                                                            </div>
                                                            <div class="col-md-6">
                                                                <!-- Single Form Start -->
                                                                <div class="single-form">
                                                                    <button class="btn btn-primary btn-hover-dark">Confirm</button>
                                                                </div>
                                                                <!-- Single Form End -->
                                                            </div>
                                                        </div>
                                                    </form>
                                                </div>
                                                <!-- Reviews Form End -->
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Reviews Form Modal End -->                          
                                    <div class="tab-pane fade" id="reviews">

                                        <!-- Tab Reviews Start -->
                                        <div class="tab-reviews">
                                            <h3 class="tab-title">Student Reviews:</h3>

                                            <div class="reviews-wrapper reviews-active">
                                                <div class="swiper-container">
                                                    <div class="swiper-wrapper">

                                                        <!-- Single Reviews Start -->
                                                        <div class="single-review swiper-slide">
                                                            <div class="review-author">
                                                                <div class="author-thumb">
                                                                    <img src="assets/images/author/author-06.jpg" alt="Author">
                                                                    <i class="icofont-quote-left"></i>
                                                                </div>
                                                                <div class="author-content">
                                                                    <h4 class="name">Sara Alexander</h4>
                                                                    <span class="designation">Product Designer, USA</span>
                                                                    <span class="rating-star">
                                                                            <span class="rating-bar" style="width: 100%;"></span>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <p>Lorem Ipsum has been the industry's standard dummy text since the 1500 when unknown printer took a galley of type and scrambled to make type specimen book has survived not five centuries but also the leap into electronic type and book.</p>
                                                        </div>
                                                        <!-- Single Reviews End -->

                                                        <!-- Single Reviews Start -->
                                                        <div class="single-review swiper-slide">
                                                            <div class="review-author">
                                                                <div class="author-thumb">
                                                                    <img src="assets/images/author/author-07.jpg" alt="Author">
                                                                    <i class="icofont-quote-left"></i>
                                                                </div>
                                                                <div class="author-content">
                                                                    <h4 class="name">Karol Bachman</h4>
                                                                    <span class="designation">Product Designer, USA</span>
                                                                    <span class="rating-star">
                                                                            <span class="rating-bar" style="width: 100%;"></span>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <p>Lorem Ipsum has been the industry's standard dummy text since the 1500 when unknown printer took a galley of type and scrambled to make type specimen book has survived not five centuries but also the leap into electronic type and book.</p>
                                                        </div>
                                                        <!-- Single Reviews End -->

                                                        <!-- Single Reviews Start -->
                                                        <div class="single-review swiper-slide">
                                                            <div class="review-author">
                                                                <div class="author-thumb">
                                                                    <img src="assets/images/author/author-03.jpg" alt="Author">
                                                                    <i class="icofont-quote-left"></i>
                                                                </div>
                                                                <div class="author-content">
                                                                    <h4 class="name">Gertude Culbertson</h4>
                                                                    <span class="designation">Product Designer, USA</span>
                                                                    <span class="rating-star">
                                                                            <span class="rating-bar" style="width: 100%;"></span>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <p>Lorem Ipsum has been the industry's standard dummy text since the 1500 when unknown printer took a galley of type and scrambled to make type specimen book has survived not five centuries but also the leap into electronic type and book.</p>
                                                        </div>
                                                        <!-- Single Reviews End -->

                                                    </div>
                                                    <!-- Add Pagination -->
                                                    <div class="swiper-pagination"></div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- Tab Reviews End -->

                                    </div>
                                </div>
                            </div>
                            <!-- Details Tab Content End -->

                        </div>
                        <!-- Courses Details Tab End -->

                    </div>
                    <!-- Courses Details End -->

                </div>
                <div class="col-lg-4">
                    <!-- Courses Details Sidebar Start -->
                    <div class="sidebar">

                        <!-- Sidebar Widget Information Start -->
                        <div class="sidebar-widget widget-information">
                            <div class="info-price">
                                <span class="price">${{ course.price }}</span>
                            </div>
                            <div class="info-list">
                                <ul>
                                    <li><i class="icofont-man-in-glasses"></i> <strong>Instructor</strong> <span>{{course.tutor.getFirstname}} {{course.tutor.getLastname}}</span></li>
                                    <li><i class="icofont-clock-time"></i> <strong>Duration</strong> <span>{{ course.duration }}</span></li>
                                    <li><i class="icofont-calendar"></i> <strong>Posted in</strong> <span>{{ course.posteddate|date("m/d/y") }}</span></li>
                                    <li><i class="icofont-listine-dots"></i> <strong>NBR Section</strong> <span>{{ course.nbrsection }}</span></li>
                                    <li><i class="icofont-certificate-alt-1"></i> <strong>Certificate</strong> <span>Yes</span></li>
                                </ul>
                            </div>
                            <div class="info-btn">
                                <a class="btn btn-warning" href="{{ path('edit_course', {'idCourse' : course.idcourse})}}">Edit</i></a>
                                <a class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#reviewsModal">Delete</a>
                            </div>
                        </div>
                        <!-- Sidebar Widget Information End -->
                    </div>
                    <!-- Courses Details Sidebar End -->
                </div>
            </div>
        </div>
    </div>
    <!-- Courses End -->
</div>
{% endblock %}