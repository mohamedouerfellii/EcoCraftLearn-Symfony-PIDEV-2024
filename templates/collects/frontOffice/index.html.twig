 {% extends 'baseFront.html.twig' %}
{% block js %}
 <script defer src="{{asset('assets/js/collect.js')}}"></script>
  {% endblock %}
{% block body %}
<style>
.error-message {
    color: red; /* Set the text color to red */
    
}</style>
   
<div class="section page-banner">
    <img class="shape-1 animation-round" src="{{ asset('assets/images/shape/shape-8.png')}}" alt="Shape">

    <img class="shape-2" src="{{ asset('assets/images/shape/shape-23.png')}}" alt="Shape">

    <div class="container">
        <!-- Page Banner Start -->
        <div class="page-banner-content">
            <ul class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">Collects</li>
            </ul>
            <h2 class="title">coll<span>ects</span></h2>
        </div>
        <!-- Page Banner End -->
    </div>

    <!-- Shape Icon Box Start -->
    <div class="shape-icon-box">

        <img class="icon-shape-1 animation-left" src="{{ asset('assets/images/shape/shape-5.png')}}" alt="Shape">

        <div class="box-content">
            <div class="box-wrapper">
                <i class="flaticon-badge"></i>
            </div>
        </div>

        <img class="icon-shape-2" src="{{ asset('assets/images/shape/shape-6.png')}}" alt="Shape">

    </div>
    <!-- Shape Icon Box End -->

    <img class="shape-3" src="{{ asset('assets/images/shape/shape-24.png')}}" alt="Shape">

    <img class="shape-author" src="{{ asset('assets/images/author/author-11.jpg')}}" alt="Shape">

</div>



<div class="tab-content courses-tab-content" >
            <div class="tab-pane fade show active" id="tabs1" >
                <div class="courses-wrapper">   
                <br>
  <a class="btn btn-primary btn-hover-dark" href="{{ path('add_collects')}}" >Add New Collect</a>
<div class="row" id="mainAllProductDiv">
 
{% for response in Collects %}
    <div class="col-lg-4 col-md-6">
        <div class="single-courses">
            <div class="courses-content">
                <h4 class="title"><a href="#">{{ response.collectsptss.name }}</a></h4>
                <div class="courses-meta">
                    <span> Material Type : {{ response.materialType }}</span>
                </div>
                <br>
                 <span class="rating-count">{{ response.collectDate|date('d-m-Y') }}</span>
                <div class="courses-author">
                    <div class="author">
                        <div class="author-name"></div>
                    </div>
               
                       
                </div>
                <div class="courses-price-review">
                    <div class="courses-price">
                        <span class="sale-parice">{{ response.quantity }} KG</span>
                    </div>
                <div class="courses-review">
                        
                        
                    </div>
               
                </div>
                
                
                    <a id="deletebtn"class="courses-author author author-name single-courses courses-content courses-author tag "style="display: inline-block; margin-right: 10px;"  href="{{ path('delete_adh', {'id': response.id}) }}" > Delete</a>
                    <a id="buyButton"class="courses-author author author-name single-courses courses-content courses-author tag "style="display: inline-block; margin-right: 10px;" href="{{ path('update_collects', {'id': response.id}) }}"> Update</a>
                    
                  
           
        </div>
    </div></div>
{% endfor %}

</div>

                 </div>
            </div>
     

<br>
<br>
 <a class="btn cur-p btn"href="{{ path('generate_pdf') }}">Télécharger PDF</a>
      <div class="pagination">
                                {% set currentPage = Collects.currentPageNumber %}
                                {% set previous = currentPage > 1 ? currentPage - 1 : false %}
                                {% set next = currentPage < Collects.pageCount ? currentPage + 1 : false %}
                                <ul class="pagination">
                                    {% if previous %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_collects') }}?page={{ previous }}">Précédent</a>
                                        </li>
                                    {% endif %}
                                    <li class="page-item active">
                                        <span class="page-link">{{ currentPage }}</span>
                                    </li>
                                    {% if next %}
                                        <li class="page-item">
                                            <a class="page-link" href="{{ path('afficher_collects') }}?page={{ next }}">Suivant</a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
   
</div>
<br>
<br>
{% endblock %}
