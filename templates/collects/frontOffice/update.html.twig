 {% extends 'baseFront.html.twig' %}
  

{% block body %}
<style>
.error-message {
    color: red; /* Set the text color to red */
    
}</style>
   
<div class="section page-banner">
    <img class="shape-1 animation-round" src="{{ asset('assets/images/shape/shape-8.png')}}" alt="Shape">

    <img class="shape-2" src="{{ asset('assets/images/shape/shape-23.png')}}" alt="Shape">

    <div class="container">
        <!-- Page Banner Start -->
        <div class="page-banner-content">
            <ul class="breadcrumb">
                <li><a href="#">Home</a></li>
                <li class="active">login</li>
            </ul>
            <h2 class="title">log<span>in</span></h2>
        </div>
        <!-- Page Banner End -->
    </div>

    <!-- Shape Icon Box Start -->
    <div class="shape-icon-box">

        <img class="icon-shape-1 animation-left" src="{{ asset('assets/images/shape/shape-5.png')}}" alt="Shape">

        <div class="box-content">
            <div class="box-wrapper">
                <i class="flaticon-badge"></i>
            </div>
        </div>

        <img class="icon-shape-2" src="{{ asset('assets/images/shape/shape-6.png')}}" alt="Shape">

    </div>
    <!-- Shape Icon Box End -->

    <img class="shape-3" src="{{ asset('assets/images/shape/shape-24.png')}}" alt="Shape">

    <img class="shape-author" src="{{ asset('assets/images/author/author-11.jpg')}}" alt="Shape">

</div>

<div class="formbold-main-wrapper">
  <div class="formbold-form-wrapper">
                            <!-- Début du formulaire -->
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                            


                              <div class="single-form">          
              {{ form_widget(form.collectsptss, {'attr': { 'class': 'formbold-form-input','rows': '6'}}) }}
              <span class="form-error" style="color: red;">{{ form_errors(form.collectsptss)}}</span>
          </div>
             <div class="single-form">          
              {{ form_widget(form.materialType, {'attr': { 'class': 'formbold-form-input','rows': '6'}}) }}
              <span class="form-error" style="color: red;">{{ form_errors(form.materialType)}}</span>
          </div>
             <div class="single-form">          
              {{ form_widget(form.quantity, {'attr': { 'class': 'formbold-form-input','rows': '6'}}) }}
              <span class="form-error" style="color: red;">{{ form_errors(form.quantity)}}</span>
          </div>
                            <!-- Champs du formulaire -->
                            <div class="form-group">
                              
                            </div>
                            <!-- Ajoutez plus de champs si nécessaire -->

                            <!-- Bouton de soumission -->
                            <button type="submit" class="btn btn-success btn-block mt-3">Update</button>

                            <!-- Fin du formulaire -->
                            {{ form_end(form) }}
                        </div>
                    </div>
               



{% endblock %}