                                    </a>
                                        </pre>
                                        </div>
                                    </div>
                                    <div class="post-attachment">
                                        {% if post.attachment %}  
                                            <p><img src="{{ asset('contents/uploads/posts/' ~ post.attachment) }}" width="200px" height="200px"></p>
                                        {% endif %}
                                        
                                    </div>
                                  
                                    <div>
                                        <p>{{ post.content }}</p>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
