{% if form %}
    {{ form_start(form) }}
    <div class="flex justify-center">
        <div class="mb-3 xl:w-96">
            <div class="flex flex-col justify-center">
                {{ form_label(form.contents, 'Contents', {'attr': {'class': 'form-label inline-block mb-2 text-gray-700'}}) }}
                {{ form_widget(form.contents) }}
            </div>
            <div>
                {{ form_widget(form.search) }} {# Render the search button #}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endif %}

