                            <div class="info-btn">
                                <a class="btn btn-warning" href="{{ path('updateEvent', {'idevent' : event.idevent})}}">Edit</i></a>
                                <a class="btn btn-danger" href="{{ path('deleteEvent', {'idevent' : event.idevent})}}">Delete</a>
                            </div>
                        </div>
                        <!-- Sidebar Widget Information End -->
                    </div>
                    <!-- Courses Details Sidebar End -->
