{% extends 'baseFront.html.twig' %}
{% block title %}My Learning{% endblock %}
{% block body %}
<!-- Overlay Start -->
<div class="overlay"></div>
<!-- Overlay End -->
<!-- Page Banner Start -->
<div class="section page-banner">
    <img class="shape-1 animation-round" src="{{ asset('assets/images/shape/shape-8.png')}}" alt="Shape">

    <img class="shape-2" src="{{ asset('assets/images/shape/shape-23.png')}}" alt="Shape">

    <div class="container">
        <!-- Page Banner Start -->
        <div class="page-banner-content">
            <ul class="breadcrumb">
                <li><a href="{{path('all_courses', {'page' : 1})}}">Home</a></li>
                <li class="active">Courses</li>
            </ul>
            <h2 class="title">My <span>Learning</span></h2>
        </div>
        <!-- Page Banner End -->
    </div>

    <!-- Shape Icon Box Start -->
    <div class="shape-icon-box">

        <img class="icon-shape-1 animation-left" src="{{ asset('assets/images/shape/shape-5.png')}}" alt="Shape">

        <div class="box-content">
            <div class="box-wrapper">
                <i class="flaticon-badge"></i>
            </div>
        </div>

        <img class="icon-shape-2" src="{{ asset('assets/images/shape/shape-6.png')}}" alt="Shape">

    </div>
    <!-- Shape Icon Box End -->

    <img class="shape-3" src="{{ asset('assets/images/shape/shape-24.png')}}" alt="Shape">

    <img class="shape-author" src="{{ asset('assets/images/author/author-11.jpg')}}" alt="Shape">

</div>
<!-- Page Banner End -->

<!-- Courses Start -->
<div class="section section-padding">
    <div class="container">

        <!-- Courses Category Wrapper Start  -->
        <div class="courses-category-wrapper">
            <div class="courses-search search-2">
                <input type="text" placeholder="Search here">
                <button><i class="icofont-search"></i></button>
            </div>
            <ul class="category-menu">
                <li><a href="{{path('all_courses', {'page' : 1})}}">All Courses</a></li>
                <li><a class="active" href="{{ path('my_learning', {'idUser' : 14})}}">My Learning</a></li>
            </ul>
        </div>
        <!-- Courses Category Wrapper End  -->

        <!-- Courses Wrapper Start  -->
        <div class="courses-wrapper-02">
            <div class="row">
                {% for cp in courses %}
                <div class="col-lg-4 col-md-6">
                    <!-- Single Courses Start -->
                    <div class="single-courses">
                        <div class="courses-images">
                            <a href="{{ path('after_enroll', {'idCourse' : cp.course.idcourse, 'sectionIndex' : 0}) }}"><img src="{{ asset('contents/uploads/courses/' ~ cp.course.image) }}" alt="Courses" width="330" height="200"></a>
                        </div>
                        <div class="courses-content">
                            <div class="courses-author">
                                <div class="author">
                                    <div class="author-thumb">
                                        <a href="#"><img src="{{asset('assets/images/author/author-01.jpg')}}" alt="Author"></a>
                                    </div>
                                    <div class="author-name">
                                        <a class="name" href="#">{{cp.course.tutor.getFirstname}} {{cp.course.tutor.getLastname}}</a>
                                    </div>
                                </div>
                            </div>

                            <h4 class="title"><a href="{{ path('after_enroll', {'idCourse' : cp.course.idcourse, 'sectionIndex' : 0}) }}">{{cp.course.title}}</a></h4>
                            <div class="courses-rating">
                                {% if cp.sectiondone == 0 %}
                                <p>{{ cp.sectiondone }}% Complete</p>
                                <div class="rating-progress-bar">
                                    <div class="rating-line" style="width: {{ cp.sectiondone }}%;"></div>
                                </div>
                                {% else %}
                                <p>{{ ( cp.sectiondone * 100 ) / cp.course.nbrsection }}% Complete</p>
                                <div class="rating-progress-bar">
                                    <div class="rating-line" style="width: {{ ( cp.sectiondone * 100 ) / cp.course.nbrsection }}%;"></div>
                                </div>
                                {% endif %}
                                <div class="rating-meta">
                                    <span class="rating-star">
                                        <span class="rating-bar" style="width: {{ (cp.course.rate) }}%;"></span>
                                    </span>
                                    <p>Your rating</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Single Courses End -->
                </div>
                {% endfor %}
            </div>
        </div>
        <!-- Courses Wrapper End  -->


    </div>
</div>
<!-- Courses End -->
{% endblock %}