{% extends 'baseFront.html.twig' %}
{% block body %}


        <!-- Page Banner Start -->
        <div class="section page-banner">

            <img class="shape-1 animation-round" src="{{asset('assets/images/shape/shape-8.png')}}" alt="Shape">

            <img class="shape-2" src="{{asset('assets/images/shape/shape-23.png')}}" alt="Shape">

            <div class="container">
                <!-- Page Banner Start -->
                <div class="page-banner-content">
                    <ul class="breadcrumb">
                        <li><a href="#">Carts</a></li>
                        <li class="active">Orders</li>
                    </ul>
                    <h2 class="title">Confirm <span>Order</span></h2>
                </div>
                <!-- Page Banner End -->
            </div>

            <!-- Shape Icon Box Start -->
            <div class="shape-icon-box">

                <img class="icon-shape-1 animation-left" src="{{asset('assets/images/shape/shape-5.png')}}" alt="Shape">

                <div class="box-content">
                    <div class="box-wrapper">
                        <i class="flaticon-badge"></i>
                    </div>
                </div>

                <img class="icon-shape-2" src="{{asset('assets/images/shape/shape-6.png')}}" alt="Shape">

            </div>
            <!-- Shape Icon Box End -->

            <img class="shape-3" src="{{asset('assets/images/shape/shape-24.png')}}" alt="Shape">

            <img class="shape-author" src="{{asset('assets/images/author/author-11.jpg')}}" alt="Shape">

        </div>
        <!-- Page Banner End -->
 <!-- Contact Map Start -->
        <div class="section section-padding-02">
            <div class="container">

            

            </div>
        </div>  
        <!-- Contact Map End -->

        <!-- Contact Start -->
        <div class="section section-padding">
            <div class="container">

                <!-- Contact Wrapper Start -->
                <div class="contact-wrapper">
                    <div class="row align-items-center">
                        <div class="col-lg-6">
    <!-- Contact Map Wrapper Start -->
                <div class="contact-map-wrapper">
                    <iframe id="gmap_canvas" src="https://maps.google.com/maps?q=Mission%20District%2C%20San%20Francisco%2C%20CA%2C%20USA&amp;t=&amp;z=13&amp;ie=UTF8&amp;iwloc=&amp;output=embed"></iframe>
                </div>
                <!-- Contact Map Wrapper End -->
                        </div>
                        <div class="col-lg-6">

                            <!-- Contact Form Start -->
                            <div class="contact-form">
                                <h3 class="title">Confirm Your <span>Order</span></h3>

                                <div class="form-wrapper">
                                      {{form_start(form,{'attr':{'methode':'POST','novalidate': 'novalidate'}})}}
                                         <!-- Single Form Start -->
                                    <div class="single-form">
                                        {{ form_widget(form.email, {'attr': {'placeholder': 'Enter your email', 'class': 'formbold-form-input', 'id': 'orderEmail'}}) }}
                                        <span class="form-error">{{ form_errors(form.email, {'attr': {'class': 'form-error'}}) }}</span>
                                    </div>
                                    <!-- Single Form End -->

                                    <!-- Single Form Start -->
                                    <div class="single-form">
                                        {{ form_widget(form.city, {'attr': {'placeholder': 'Enter your city', 'class': 'formbold-form-input', 'id': 'orderCity'}}) }}
                                        <span class="form-error">{{ form_errors(form.city, {'attr': {'class': 'form-error'}}) }}</span>
                                    </div>
                                    <!-- Single Form End -->

                                    <!-- Single Form Start -->
                                    <div class="single-form">
                                        {{ form_widget(form.phone, {'attr': {'placeholder': 'Enter your phone number', 'class': 'formbold-form-input', 'id': 'orderPhone'}}) }}
                                        <span class="form-error">{{ form_errors(form.phone, {'attr': {'class': 'form-error'}}) }}</span>
                                    </div>
                                    <!-- Single Form End -->

                                  
                                        <p class="form-message"></p>
                                        <!-- Single Form Start -->
                                        <div class="single-form">
                                            <button class="btn btn-primary btn-hover-dark w-100">Confirm <i class="flaticon-right"></i></button>
                                        </div>
                                        <!-- Single Form End -->
                                     {{ form_end(form)}}
                                </div>
                            </div>
                            <!-- Contact Form End -->

                        </div>
                    </div>
                </div>
                <!-- Contact Wrapper End -->

            </div>
        </div>
        <!-- Contact End -->



{% endblock %}