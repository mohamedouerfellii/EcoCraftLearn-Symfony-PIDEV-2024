<!DOCTYPE html>
<!-- Coding By CodingNepal - youtube.com/codingnepal -->
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ECL - WB Meeting</title>
    <link rel="shortcut icon" type="image/x-icon" href="{{asset('assets/images/logoDark.png')}}">
    <link rel="stylesheet" href="{{asset('assets/css/styleWB.css')}}">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="{{asset('assets/js/whiteboard/scriptWBStudent.js')}}" defer></script>
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
    <script defer src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
  </head>
  <body>
    <div class="container" id="container" data-id-room="{{ course.idcourse + course.tutor.iduser}}" data-id-course="{{ course.idcourse }}">
      <section class="tools-board">
        <div class="row">
          <label class="title">Shapes</label>
          <ul class="options">
            <li class="option tool" id="rectangle">
              <img src="{{asset('assets/icons/rectangle.svg')}}" alt="">
              <span>Rectangle</span>
            </li>
            <li class="option tool" id="circle">
              <img src="{{asset('assets/icons/circle.svg')}}" alt="">
              <span>Circle</span>
            </li>
            <li class="option tool" id="triangle">
              <img src="{{asset('assets/icons/triangle.svg')}}" alt="">
              <span>Triangle</span>
            </li>
            <li class="option">
              <input type="checkbox" id="fill-color">
              <label for="fill-color">Fill color</label>
            </li>
          </ul>
        </div>
        <div class="row">
          <label class="title">Options</label>
          <ul class="options">
            <li class="option active tool" id="brush">
              <img src="{{asset('assets/icons/brush.svg')}}" alt="">
              <span>Brush</span>
            </li>
            <li class="option tool" id="eraser">
              <img src="{{asset('assets/icons/eraser.svg')}}" alt="">
              <span>Eraser</span>
            </li>
            <li class="option">
              <input type="range" id="size-slider" min="1" max="30" value="5">
            </li>
          </ul>
        </div>
        <div class="row colors">
          <label class="title">Colors</label>
          <ul class="options">
            <li class="option"></li>
            <li class="option selected"></li>
            <li class="option"></li>
            <li class="option"></li>
            <li class="option">
              <input type="color" id="color-picker" value="#4A98F7">
            </li>
          </ul>
        </div>
        <div class="row buttons">
          <button class="clear-canvas">Clear Canvas</button>
          <button class="save-img">Save As Image</button>
        </div>
      </section>
      <section class="drawing-board">
        <canvas></canvas>
      </section>
      <section class="participants-board">
        <div class="row">
          <label class="title">Tutor</label>
          <ul class="participants">
            <li class="participant detail">
              <span>{{ course.tutor.lastname }} {{ course.tutor.lastname }}</span>
            </li>
          </ul>
        </div>
        <div class="row buttons">
          <button id="disconnect" class="save-img">Disconnect</button>
        </div>
      </section>
    </div>
    <!-- mercure notification -->
    <script>
        const roomId = document.getElementById('container').getAttribute('data-id-room');
        const eventSource = new EventSource("{{ mercure('https://ecocraftlearning/wbmeeting/' ~ roomId)|escape('js') }}");
        eventSource.onmessage = event => {
            notifData = JSON.parse(event.data);
            if(notifData['action'] == "drawing")
              drawing(notifData);
            else if(notifData['action'] == "startDraw")
              startDraw(notifData);
            else
              clear();
        }
    </script>
  </body>
</html>