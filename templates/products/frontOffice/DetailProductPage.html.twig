        <!-- Courses Start -->
        <div class="section section-padding mt-n10">

           {% block bodyDetail %}

            <div class="container">
                <div class="row gx-10">
                    <div class="col-lg-8">

                        <!-- Courses Details Start -->
                        <div class="courses-details">

                            <div class="courses-details-images">
                                <img src="{{ asset(product.image) }}" alt="Courses Details">
                            

                    
                            </div>

                            <h2 class="title">{{ product.description }}</h2>

                            <div class="courses-details-admin">
                                <div class="admin-author">
                                    <div class="author-thumb">
                                        <img src="{{asset('assets/images/author/author-01.jpg')}}" alt="Author">
                                    </div>
                                    <div class="author-content">
                                        <a class="name" href="#">Pamela Foster</a>
                                
                                    </div>
                                </div>
                                <div class="admin-rating">
                                    <span class="rating-count">4.9</span>
                                    <span class="rating-star">
											<span class="rating-bar" style="width: 80%;"></span>
                                    </span>
                                    <span class="rating-text">(5,764 Rating)</span>
                                </div>
                            </div>

                            <!-- Courses Details Tab Start -->
                            <div class="courses-details-tab">



                                <!-- Details Tab Content Start -->
                                <div class="details-tab-content">
                                    <div class="tab-content">
                                        <div class="tab-pane fade show active" id="description">

                                            <!-- Tab Description Start -->
                                            <div class="tab-description">
                                                <div class="description-wrapper">
                                                    <h3 class="tab-title">Description:</h3>
                                                    <p>{{ product.description }}</p>
                                                </div>
                                            </div>
                                            <!-- Tab Description End -->

                                        </div>
                                        <div class="tab-pane fade" id="instructors">

                                           

                                        </div>
                                       
                                    </div>
                                </div>
                                <!-- Details Tab Content End -->

                            </div>
                            <!-- Courses Details Tab End -->

                        </div>
                        <!-- Courses Details End -->

                    </div>
                    <div class="col-lg-4">
                        <div class="sidebar">
                            <div class="sidebar-widget widget-information">
                                <div class="info-price">
                                    <span class="price">{{ product.price }}</span>
                                </div>
                                <div class="info-list">
                                    <ul>
                                        <li><i class="icofont-man-in-glasses"></i> <strong>Name</strong> <span>{{ product.name }}</span></li>
                                        <li><i class="icofont-clock-time"></i> <strong>Quantity</strong> <span>{{ product.quantite }}</span></li>
                                        <li><i class="icofont-ui-video-play"></i> <strong>Date </strong> <span>{{ product.adddate|date }}</span></li>
                                    </ul>
                                </div>
                                <div class="info-btn">
                                    <a href="{{ path('deleteProduct', { 'idproduct': product.idproduct }) }}" class="btn btn-primary btn-hover-dark">Delete</a>
                                    <a href="{{ path('updateproduct', { 'idproduct': product.idproduct }) }}" class="btn btn-primary btn-hover-dark">Update</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

 {% endblock %}
