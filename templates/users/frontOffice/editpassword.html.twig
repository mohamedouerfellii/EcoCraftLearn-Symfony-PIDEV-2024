 <form action="{{ path('update_student_password') }}" method="post" onsubmit="return validatePassword()">
    <div class="form-group">
        <label for="password">Current Password</label>
        <input type="password" id="password" name="password" class="form-control">
    </div>
    <div class="form-group">
        <label for="new">New Password</label>
        <input type="password" id="new" name="new" class="form-control">
        <span id="newError" style="color: red; display: none;">Passwords do not match</span>
    </div>
    <div class="form-group">
        <label for="conf">Confirm Password</label>
        <input type="password" id="conf" name="conf" class="form-control">
        <span id="confError" style="color: red; display: none;">Passwords do not match</span>
    </div>
    <button type="submit" class="btn btn-primary">Update Password</button>
</form>

<script>
    function validatePassword() {
        var newPassword = document.getElementById("new").value;
        var confirmPassword = document.getElementById("conf").value;

        if (newPassword != confirmPassword) {
            document.getElementById("newError").style.display = "block";
            document.getElementById("confError").style.display = "block";
            return false;
        } else {
            document.getElementById("newError").style.display = "none";
            document.getElementById("confError").style.display = "none";
            return true;
        }
    }
</script> 
